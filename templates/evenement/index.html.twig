{% extends 'base-back.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block table %}
    <div class="container">
        <h1 class="text-center my-4">Liste des Événements</h1>

        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Heure</th>
                                        <th scope="col">Lieu</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for evenement in evenements %}
                                    <tr>
                                        <td>{{ evenement.id }}</td>
                                        <td>{{ evenement.nom }}</td>
                                        <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
                                        <td>{{ evenement.heure ? evenement.heure|date('H:i:s') : '' }}</td>
                                        <td>{{ evenement.lieu }}</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                                <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                                <a href="{{ path('app_pdf', {'id': evenement.id}) }}" class="btn btn-primary">Télécharger le PDF</a>
                                        
                                                 {{ include('evenement/_delete_form.html.twig') }}
                                            </div>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">Aucun enregistrement trouvé</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_evenement_new') }}" class="btn btn-primary">Créer un nouvel événement</a>
            <a href="{{ path( 'app_calendar_controller12') }}" class="btn btn-secondary">Voir le calendrier</a>
        </div>
    </div>
{% endblock %}
