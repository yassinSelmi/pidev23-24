
{% block body %}


<h1 style="text-align: center"> Liste des restaurants </h1>
<br>



<!DOCTYPE html>
<html>
<head>
    <style>
        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 50%;
        }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 2px;
        }

        #customers tr:nth-child(even){background-color: #f2f2f2;}

        #customers tr:hover {background-color: #ddd;}

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: center;
            background-color: #4c7aaf;
            color: yellow;
        }
    </style>
</head>



<table border ="1" id="customers" width="60%" height="120" >
    <tr>

        <th scope="row">Id</th>
        <th scope="row">NomResto</th>
        <th scope="row">AdresseResto</th>
        <th scope="row">NumeroResto</th>
        <th scope="row">specialtie</th>
        <th scope="row">Nombre fourchette</th>
        <th scope="row">Fourhcette de prix</th>
        <th scope="row">Heure Ouverture</th>
        <th scope="row">Heure Fermeture</th>
        <th scope="row">Image</th>



    </tr>
    <tbody id="all">
    {% for restaurants in restaurants %}
        <tr>
            <td>{{ restaurants.id }}</td>
                <td>{{ restaurants.nomResto }}</td>
                <td>{{ restaurants.adresseResto }}</td>
                <td>{{ restaurants.numeroResto }}</td>
                <td>{{ restaurants.specialtie }}</td>
                <td>{{ restaurants.nombreFourchette }}</td>
                <td>{{ restaurants.FourchetteDePrix }} TND</td>
                <td>{{ restaurants.heureOuverture }}H</td>
                <td>{{ restaurants.heureFermeture }}H</td>
                    <td><img src="data:image/jpeg;base64,{{ restaurants.image }}"  style="width: 100px;height:100px" ></td>


        </tr>


    {%endfor%}




    {% endblock %}