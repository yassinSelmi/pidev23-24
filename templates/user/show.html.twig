{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|join(', ') : 'No roles' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ user.num }}</td>
            </tr>
            <tr>
                <th>CIN</th>
                <td>{{ user.cin }}</td>
            </tr>
            <tr>
                <th>Profile_image</th>
                <td> <img src="{{ asset('uploads/' ~ user.profileImage) }}" alt="user Image" class="img-fluid mb-3" height="100px" width="100px"> </td>
            </tr>
              <tr>
    <th>QR Code</th>
    <td>
        {{ qrCodeResult.getString() | raw }}
    </td>
</tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}" class="btn btn-primary">Back to List</a>
    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
