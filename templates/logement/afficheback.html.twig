{% extends 'base2.html.twig' %}

{% block title %}Ajouter logement{% endblock %}

{% block table %}
    <h1>Ajouter logement</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>type</th>
                <th>description</th>
                <th>capacite</th>
                <th>nbr de chambre</th>
                <th>nombre de salle de bains</th>
                <th>prix</th>
                <th>image</th>
            </tr>
        </thead>
        <tbody>
        {% for logement in logements %}
            <tr>
                <td>{{ logement.id }}</td>
                <td>{{ logement.nom }}</td>
                <td>{{ logement.type }}</td>
                <td>{{ logement.description }}</td>
                <td>{{ logement.capacite }}</td>
                <td>{{ logement. nbrchambre}}</td>
                <td>{{ logement.capacite }}</td>
                <td> <img src="{{ asset(logement.image) }}" alt="" style="width: 100px;height:100px"> </td>
                <td>
                    <a href="{{ path('app_logement_show', {'id': logement.id}) }}">show</a>
                    <a href="{{ path('app_logement_edit', {'id': logement.id}) }}">edit</a>
                   {{ include('logement/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a style=color:green href="{{ path('app_logement_new') }}">Ajouter nouveau logement</a>
{% endblock %}